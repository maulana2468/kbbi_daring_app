<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VocabDetailActivity">

    <LinearLayout
        android:background="@color/amber"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bar_atas"
        android:gravity="bottom"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <View
            android:id="@+id/back_from_detail"
            android:layout_gravity="top"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:rotation="180"
            android:background="@drawable/ic_fluent_arrow_right_16_regular"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/vocab_detail"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lema_detail"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/bar_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="16dp"
            android:id="@+id/rv_arti_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>